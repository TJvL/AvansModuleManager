@model ModuleManager.Web.ViewModels.PartialViewModel.UserLockViewModel

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="myModalLabel">Account bewerken</h4>
</div>

@using (Html.BeginForm())
{
    <div class="modal-body">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.UserNaam)
        @Html.HiddenFor(model => model.Wachtwoord)
        @Html.HiddenFor(model => model.SysteemRol)
        @Html.HiddenFor(model => model.Email)
        @Html.HiddenFor(model => model.Naam)
        @Html.HiddenFor(model => model.Blocked)
        
        Weet uw zeker dat uw de volgende gebruiker: <b>@Model.UserNaam</b> wilt  @if (!Model.Blocked){@("de");}blokkeren?

     </div>
    <div class="modal-footer">
        <button class="btn" type="button" data-dismiss="modal">Anuleren</button>
        <input class="btn btn-primary" type="submit" value="@if (!Model.Blocked){@("Deblokkeer");}else{@("Blokkeer");}" />
    </div>

}


     
