@model ModuleManager.Web.ViewModels.PartialViewModel.UserEditViewModel

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="myModalLabel">Account bewerken</h4>
</div>

@using (Html.BeginForm())
{

    <div class="modal-body">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="field-validation-error">
            @ViewBag.UsernameError
            @Html.ValidationMessage("error")
        </div>

        @Html.HiddenFor(model => model.OudeUserNaam)
        @Html.HiddenFor(model => model.Blocked)

        <div class="form-group">
            @Html.LabelFor(model => model.UserNaam)
            @Html.EditorFor(model => model.UserNaam, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.UserNaam, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Wachtwoord)
            @Html.EditorFor(model => model.Wachtwoord, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Wachtwoord, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SysteemRol)
            @Html.DropDownListFor(model => model.SysteemRol,
                    new SelectList((from s in Model.SysteemRollen
                                    select new
                                    {
                                        SysteemRol = s.Role,
                                        RolDisplay = s.Role
                                    }), "SysteemRol", "RolDisplay", null), new { @class = "form-control" })

            @Html.ValidationMessageFor(model => model.SysteemRol, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Email)
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Naam)
            @Html.EditorFor(model => model.Naam, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Naam, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="modal-footer">
        <button class="btn" type="button" data-dismiss="modal">Anuleren</button>
        <input class="btn btn-primary" type="submit" value="Bewerk" />
    </div>

} 

@section Scripts{

    @Scripts.Render("~/bundles/jqueryval")
}














<div class="modal fade" id="user-edit" role="dialog" aria-labelledby="CompetentieEdit" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title" id="UserEdit">Gebruiker bewerken</h4>
            </div>
            <div class="modal-body">
                <form role="form">
                    <div class="form-group">
                        <label for="username">Gebruikersnaam</label>
                        <input type="text" class="form-control" id="username" placeholder="Username" value="gebruikernaam">
                    </div>

                    <div class="form-group">
                        <label for="email">E-Mail Adress</label>
                        <input type="text" class="form-control" id="email" placeholder="Email" value="email">
                    </div>

                    <div class="form-group">
                        <label for="systeemrolEdit">Role</label>
                        <select class="form-control" id="systeemrolEdit" name="systeemrolEdit">
                            <option></option>
                            <option value="1" selected="selected">Teacher</option>
                            <option value="2">Admin</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Annuleren</button>
                <button type="button" class="btn btn-success">Bewerken</button>
            </div>
        </div>
    </div>
</div>

