@model ModuleManager.Web.ViewModels.PartialViewModel.ModuleLockViewModel

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="myModalLabel">Module status bewerken</h4>
</div>

@using (Html.BeginForm())
{
    <div class="modal-body">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.CursusCode)
        @Html.HiddenFor(model => model.Schooljaar)
        @Html.HiddenFor(model => model.Blocked)

        Weet uw zeker dat uw de volgende module: <b>@Model.CursusCode</b> wilt  @if (!Model.Blocked)
        {@("de");
        }blokkeren?

    </div>
    <div class="modal-footer">
        <button class="btn" type="button" data-dismiss="modal">Annuleren</button>
        <input class="btn btn-primary" type="submit" value="@if (!Model.Blocked){@("Deblokkeer");}else{@("Blokkeer");}" />
    </div>

}



