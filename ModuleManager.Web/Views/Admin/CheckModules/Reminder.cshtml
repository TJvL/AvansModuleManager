@model ModuleManager.Web.ViewModels.CheckModulesViewModel

@{ var email = Model.ModuleViewModels.data.First().Verantwoordelijke + "@avans.nl"; }

<div class="modal fade" id="reminder" role="dialog" aria-labelledby="CheckModulesReminder" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title" id="CheckModulesReminder">Herinnering versturen</h4>
            </div>
            <div class="modal-body">
                <form role="form">
                    <p>
                        De vakcoördinator van Algoritmiek en Datastructuren is <b>@Model.ModuleViewModels.data.First().Verantwoordelijke</b>.
                        Wilt uw de herinneringsmail naar het volgende e-mailadres versturen?
                    </p>
                    <div class="form-group">
                        <!--<label for="email">E-Mail</label>-->
                        <input type="text" class="form-control" id="email" value="@email">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Annuleren</button>
                <button type="button" class="btn btn-primary"><i class="fa fa-envelope-o"></i> Versturen</button>
            </div>
        </div>
    </div>
</div>