@{
    ViewBag.Title = "Login";
}

<div id="content" role="content">
  <div class="container">
    <div class="row">

      <div id="primary" class="col-md-12">
        <form class="form-signin" role="form">
  			  <h2>Inloggen</h2>
  			  <label for="inputEmail" class="sr-only">Emailadres</label>
  			  <input type="email" id="inputEmail" class="form-control" placeholder="Emailadres" required="" autofocus="">
  			  <label for="inputPassword" class="sr-only">Wachtwoord</label>
  			  <input type="password" id="inputPassword" class="form-control" placeholder="Wachtwoord" required="">
  			  <div class="checkbox">
  			    <label>
  			      <input type="checkbox" value="remember-me"> Onthoud mij
  				</label>
  			  </div>
          <!-- Orginele login button -->
           <a class="btn btn-lg btn-primary btn-block" href="?" role="button">Inloggen</a>

  			</form>
      </div>
    </div>
  </div>
</div> <!-- /container -->