@using System.Web.Security;

@if (User.Identity.IsAuthenticated)
{
    
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <li class="divider">|</li>
        <li><p style="color: white;"><i class="fa fa-user"></i> Ingelogd als @User.Identity.Name</p></li>
        if (User.IsInRole("Admin"))
        {
            <li class="divider">|</li>
            <li><a href="@Url.Action("Index", "Admin")"><i class="fa fa-briefcase"></i> Beheer</a></li>
        }
        <li class="divider">|</li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()"><i class="fa fa-sign-out"></i> Uitloggen</a></li>
    }
}
else
{
        <li class="divider">|</li>
        <li><a href="@Url.Action("Login", "Account")"><i class="fa fa-sign-in"></i> Inloggen</a></li>
}

