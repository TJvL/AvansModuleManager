<div class="container">
    <div class="row">

        <div class="col-md-12">
            <ol class="breadcrumb">
                <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                <li class="active">Zoeken</li>
            </ol>
        </div>

        <div class="col-md-12">
            <h2>Zoekresultaten</h2>
        </div>

        <div id="primary" class="col-md-3">

            <div class="filters">
                <div id="search" class="input-group">
                    <input name="search" type="text" class="form-control search-query ajax" placeholder="Zoekterm" />
                    <span class="input-group-btn">
                        <button class="btn btn-default btn-search" type="button"><i class="fa fa-search"></i></button>
                    </span>
                </div>

                <div class="panel-group" id="accordion">
                    <div class="panel panel-danger">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="false" href="#competentie">
                                    Competentie
                                </a>
                            </h4>
                        </div>
                        <div id="competentie" class="panel-collapse collapse in">
                            <div class="panel-body">

                                <select name="competentie" class="form-control ajax" id="FilterCompetentie" multiple>
                                    <option>Procesanalyse uitvoeren</option>
                                    <option>Informatieanalyse uitvoeren</option>
                                    <option>Informatiesysteem ontwerpen</option>
                                </select>

                            </div>
                        </div>
                    </div>
                    <div class="panel panel-danger">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="false" href="#competentieniveau">
                                    Competentie niveau
                                </a>
                            </h4>
                        </div>
                        <div id="competentieniveau" class="panel-collapse collapse in">
                            <div class="panel-body">

                                <select name="competentieniveau" class="form-control ajax" id="FilterCompetentieOpNiveau" multiple>
                                    <option>Beginner</option>
                                    <option>Ervaren</option>
                                    <option>Expert</option>
                                </select>

                            </div>
                        </div>
                    </div>
                    <div class="panel panel-danger">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="false" href="#fase">
                                    Fases
                                </a>
                            </h4>
                        </div>
                        <div id="fase" class="panel-collapse collapse in">
                            <div class="panel-body">

                                <select class="form-control ajax" id="FilterFases" multiple>
                                    <optgroup label="Major">
                                        <option>Software ontwikkelaar</option>
                                        <option>Bedrijfsinformatica</option>
                                    </optgroup>
                                    <optgroup label="Minor">
                                        <option>Business Intelligence & IT Governance</option>
                                        <option>Business Proces Management (BPM)</option>
                                        <option>Corporate Performance Management (CPM)</option>
                                        <option>Cybersafety</option>
                                        <option>Digitale Regelsystemen (DRS)</option>
                                        <option>Embedded Software (EMS)</option>
                                        <option>Everyware in a Mobile World (EVW)</option>
                                        <option>Middleware (MDW)</option>
                                        <option>Product Ontwikkeling (PO)</option>
                                        <option>Signaal bewerking (SB)</option>
                                        <option>Software Architectuur (SWA)</option>
                                    </optgroup>
                                    <optgroup label="Opleidingsfase">
                                        <option>Propedeuse</option>
                                        <option>Hoofdfase bachelor</option>
                                    </optgroup>
                                </select>

                            </div>
                        </div>
                    </div>
                    <div class="panel panel-danger">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="false" href="#year">
                                    Leerjaar
                                </a>
                            </h4>
                        </div>
                        <div id="year" class="panel-collapse collapse in">
                            <div class="panel-body">

                                <select name="year" class="form-control ajax" id="FilterLeerjaar">
                                    <option></option>
                                    <option>2014 - 2015</option>
                                    <option>2013 - 2014</option>
                                    <option>2012 - 2013</option>
                                    <option>2011 - 2012</option>
                                </select>

                            </div>
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="false" href="#block">
                                    Blok
                                </a>
                            </h4>
                        </div>
                        <div id="block" class="panel-collapse collapse in">
                            <div class="panel-body">

                                <select name="year" class="form-control ajax" id="FilterBlok" multiple>
                                    <option>1</option>
                                    <option>2</option>
                                    <option>3</option>
                                    <option>4</option>
                                    <option>5</option>
                                </select>

                            </div>
                        </div>
                    </div>
                    <div class="panel panel-danger">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="false" href="#tag">
                                    Tags
                                </a>
                            </h4>
                        </div>
                        <div id="tag" class="panel-collapse collapse in">
                            <div class="panel-body">

                                <select name="tag" class="form-control ajax" id="FilterTags" multiple>
                                    <option>Big Data</option>
                                    <option>Milieu</option>
                                    <option>Spaans</option>
                                </select>

                            </div>
                        </div>
                    </div>
                    <div class="panel panel-danger">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="false" href="#reset">
                                    Reset Filters
                                </a>
                            </h4>
                        </div>
                        <div id="reset" class="panel-collapse collapse in">
                            <div class="panel-body">

                                <a href="#" class="btn btn-danger btn-block">Reset</a>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <div id="secondary" class="col-md-9">

            <div id="items" class="row">
                <div class="col-md-12">
                    
                    <table id="modules" class="table table-striped table-bordered" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Naam</th>
                                <th>Cursuscode</th>
                                <th>Blokken</th>
                                <th>EC</th>
                                <th>Fase('s)</th>
                                <th>Verantwoordelijke</th>
                                <th>Docenten</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>

<div id="toggle-columns" style="display:none;">
    <div class="dropdown toggle-columns text-left" style="display: inline">
        <a class="dropdown-toggle btn btn-default btn-sm" data-toggle="dropdown" href="#">
            Weergave
            <b class="caret"></b>
        </a>
        <ul class="dropdown-menu dropdown-menu-form" role="menu">
            <li>
                <label class="checkbox">
                    <input class="toggle" type="checkbox" data-column="1" checked>
                    Naam
                </label>
            </li>
            <li>
                <label class="checkbox">
                    <input class="toggle" type="checkbox" data-column="2" checked>
                    Cursuscode
                </label>
            </li>
            <li>
                <label class="checkbox">
                    <input class="toggle" type="checkbox" data-column="3" checked>
                    Blokken
                </label>
            </li>
            <li>
                <label class="checkbox">
                    <input class="toggle" type="checkbox" data-column="4" checked>
                    EC
                </label>
            </li>
            <li>
                <label class="checkbox">
                    <input class="toggle" type="checkbox" data-column="5" checked>
                    Fase('s)
                </label>
            </li>
            <li>
                <label class="checkbox">
                    <input class="toggle" type="checkbox" data-column="6" checked>
                    Verantwoordelijke
                </label>
            </li>
            <li>
                <label class="checkbox">
                    <input class="toggle" type="checkbox" data-column="7" checked>
                    Docenten
                </label>
            </li>
        </ul>
    </div>
</div>

<!-- Help MODAL -->
@Html.Partial("~/Views/Help/ModuleOverview.cshtml", null)

<!-- Export MODAL -->
@Html.Partial("~/Views/Export/ModuleOverview.cshtml", null)

<!-- JAVA MEUK -->
@section Scripts {
    
    <link href="~/Content/DataTables-1.10.3/css/dataTables.bootstrap.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/DataTables-1.10.3/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/DataTables-1.10.3/dataTables.bootstrap.js"></script>
    <script src="~/Scripts/module-overview.js"></script>

    <script>
        $(function() {
            // THIS FOR ALL OVERVIEWS
            $(".item td").on("click", function() {
                if (!$(this).hasClass("actions")) {
                    window.location = $(this).parent().data("href");
                }
            });

            $('.dropdown-menu').on('click', function(e) {
                if ($(this).hasClass('dropdown-menu-form')) {
                    e.stopPropagation();
                }
            });
        });

        // SELECT2
        $("#FilterCompetentie").select2({
            placeholder: "Competentie"
        });
        $("#FilterCompetentieOpNiveau").select2({
            placeholder: "Competentie niveau"
        });
        $("#FilterFases").select2({
            placeholder: "Fases"
        });
        $("#FilterLeerjaar").select2({
            placeholder: "Leerjaar"
        });
        $("#FilterBlok").select2({
            placeholder: "Blok"
        });
        $("#FilterTags").select2({
            placeholder: "Tags"
        });


    </script>
}